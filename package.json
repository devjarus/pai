{
  "name": "personal-ai",
  "private": true,
  "description": "Personal AI agent platform â€” chat, memory, knowledge base, tasks, web search, and plugins",
  "keywords": ["ai-memory", "agent-memory", "mcp", "sqlite", "local-first", "llm", "cli", "persistent-memory", "coding-agent"],
  "license": "MIT",
  "author": "devjarus",
  "repository": {
    "type": "git",
    "url": "https://github.com/devjarus/pai.git"
  },
  "type": "module",
  "packageManager": "pnpm@9.15.3",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint packages/*/src",
    "typecheck": "tsc --build",
    "verify": "pnpm run typecheck && pnpm run test",
    "ci": "pnpm run verify && pnpm run test:coverage",
    "pai": "node packages/cli/dist/index.js",
    "start": "node packages/server/dist/index.js",
    "stop": "kill $(head -1 ~/.personal-ai/server.pid) 2>/dev/null && echo 'Server stopped' || echo 'Server not running'",
    "dev": "pnpm build && node packages/server/dist/index.js",
    "bench:recall": "npx tsx packages/core/test/bench/recall-benchmark.ts",
    "dev:ui": "pnpm --filter @personal-ai/ui dev",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/*/src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "vitest": "^3.0.0"
  }
}
