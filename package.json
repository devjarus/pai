{
  "name": "personal-ai",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint packages/*/src",
    "typecheck": "pnpm -r run typecheck",
    "verify": "pnpm run typecheck && pnpm run test",
    "ci": "pnpm run verify && pnpm run test:coverage",
    "pai": "node packages/cli/dist/index.js",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/*/src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "vitest": "^3.0.0"
  }
}
