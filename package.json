{
  "name": "personal-ai",
  "private": true,
  "description": "Local-first personal AI with plugin architecture â€” memory, tasks, and LLM-powered prioritization",
  "license": "MIT",
  "author": "devjarus",
  "repository": {
    "type": "git",
    "url": "https://github.com/devjarus/pai.git"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint packages/*/src",
    "typecheck": "tsc --build",
    "verify": "pnpm run typecheck && pnpm run test",
    "ci": "pnpm run verify && pnpm run test:coverage",
    "pai": "node packages/cli/dist/index.js",
    "continuosctl": "continuosctl",
    "runtime:health": "continuosctl run model health --probe --provider ollama --json",
    "runtime:suggestions": "continuosctl run suggestions --scope product --window-days 30 --json",
    "runtime:board": "continuosctl run board --scope product --json",
    "runtime:conflicts": "continuosctl run conflicts --scope product --json",
    "runtime:trends": "continuosctl run trends --scope product --window-days 30 --json",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/*/src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "vitest": "^3.0.0"
  }
}
