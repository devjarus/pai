PAI_DATA_DIR=~/.personal-ai
PAI_PLUGINS=memory,tasks
PAI_LOG_LEVEL=silent

# --- Ollama local (default) ---
PAI_LLM_PROVIDER=ollama
PAI_LLM_MODEL=llama3.2
PAI_LLM_BASE_URL=http://127.0.0.1:11434

